<!-- views/layouts/main.hbs -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8"> <!-- Define character encoding -->
    <meta name="viewport" content="width=device-width, initial-scale=1.0"> <!-- Make layout responsive -->
    <title>{{title}}</title> <!-- Dynamic page title -->
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="/css/login.css">
</head>
<body>
    <!-- Site-wide header that appears on all pages using this layout -->
    <header>
        <h1>Travlr Getaways</h1>
        <!-- You can add a navigation bar or any other elements here -->
    </header>

    <!-- This is where individual view templates will be injected -->
    <main>
        {{{body}}} <!-- View-specific content gets rendered here -->
    </main>

    <!-- Global footer shown at the bottom of every page -->
    <footer>
        <p>&copy; 2025 Travlr Getaways</p>
    </footer>
</body>
</html>
