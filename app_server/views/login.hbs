<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8"> <!-- Character encoding set to UTF-8 -->
    <meta name="viewport" content="width=device-width, initial-scale=1.0"> <!-- Make page responsive -->
    <title>Login</title> <!-- Page title shown in browser tab -->
</head>
<body>
    <h1>Login to Travlr Getaways</h1> <!-- Main heading of the page -->
    
    <!-- Display flash error message if any exist -->
    {{#if flash.error}}
        <p class="error">{{flash.error}}</p> <!-- Show error message to user -->
    {{/if}}

    <!-- Display flash success message if any exist -->
    {{#if flash.success}}
        <p class="success">{{flash.success}}</p> <!-- Show success message to user -->
    {{/if}}

    <!-- Form to submit login credentials -->
    <form action="/login" method="POST">
        <label for="email">Email</label> <!-- Label for email input -->
        <input type="email" id="email" name="email" required> <!-- User email input -->

        <label for="password">Password</label> <!-- Label for password input -->
        <input type="password" id="password" name="password" required> <!-- User password input -->

        <button type="submit">Login</button> <!-- Submit button -->
    </form>

</body>
</html>